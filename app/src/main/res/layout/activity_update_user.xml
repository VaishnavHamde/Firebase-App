<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateUserActivity">

    <ImageView
        android:id="@+id/userUpdateProfileImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/account_box" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="To select profile image, click on the picture"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTextUpdateName"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUpdateAge"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUpdateEmail"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonUpdateUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="Update User"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBarUpdateUser"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>